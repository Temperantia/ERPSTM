#:kivy 1.0.9

WindowManager:
    LoginScreen:
    HomeScreen:

<LoginScreen>:
    name: 'login'
    GridLayout:
        cols: 2
        Label:
            text: 'User name'
        TextInput:
            multiline: False
        Label:
            text: 'Password'
        TextInput:
            id: passw
            password: True
            multiline: False
        Button:
            text: 'ok'
            on_press: root.login()

<HomeScreen>:
    name: 'home'
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'